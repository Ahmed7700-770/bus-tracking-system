{
  "rules": {
    "tracking": {
      "$busId": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'admin' || root.child('users').child(auth.uid).child('role').val() == 'driver')",
        ".validate": "newData.hasChildren(['location', 'timestamp'])",
        "location": {
          ".validate": "newData.hasChildren(['lat', 'lon'])"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'"
      }
    }
  }
}
